@model technicalResoultion.Models.externos

@{
    ViewBag.Title = "Editar Usuario Externo";
}

<div class="container mt-5">
    <h2 class="fw-bold">Editar Usuario Externo</h2>
    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="id_externo" />

        <div class="form-group">
            <label asp-for="nombres_e" class="control-label">Nombres</label>
            <input asp-for="nombres_e" class="form-control" />
            <span asp-validation-for="nombres_e" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="apellidos_e" class="control-label">Apellidos</label>
            <input asp-for="apellidos_e" class="form-control" />
            <span asp-validation-for="apellidos_e" class="text-danger"></span>
        </div>

       

        <div class="form-group">
            <label asp-for="correo_e" class="control-label">Correo</label>
            <input asp-for="correo_e" class="form-control" />
            <span asp-validation-for="correo_e" class="text-danger"></span>
        </div>

        

        <div class="form-group">
            <label asp-for="nombre_empresa" class="control-label">Nombre de la Empresa</label>
            <input asp-for="nombre_empresa" class="form-control" />
            <span asp-validation-for="nombre_empresa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="contacto_principal" class="control-label">Contacto Principal</label>
            <input asp-for="contacto_principal" class="form-control" />
            <span asp-validation-for="contacto_principal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="direccion" class="control-label">Dirección</label>
            <input asp-for="direccion" class="form-control" />
            <span asp-validation-for="direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="telefono" class="control-label">Teléfono</label>
            <input asp-for="telefono" class="form-control" type="number" />
            <span asp-validation-for="telefono" class="text-danger"></span>
        </div>

        

        <div class="form-group">
            <label asp-for="correo_login" class="control-label">Correo Login</label>
            <input asp-for="correo_login" class="form-control" />
            <span asp-validation-for="correo_login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="contrasena_e" class="control-label">Contraseña</label>
            <input asp-for="contrasena_e" class="form-control" type="password" />
            <span asp-validation-for="contrasena_e" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    </form>
</div>

<div style="margin-top: 10px;">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

