@model technicalResoultion.Models.externos

@{
    ViewBag.Title = "Crear Usuario Externo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="fw-bold mb-4">Crear Usuario Externo</h2>
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="form-group mb-3">
                    <label for="nombres_e" class="form-label">Nombres</label>
                    <input type="text" class="form-control" id="nombres_e" name="nombres_e" placeholder="Nombres" required />
                    <div class="invalid-feedback">Por favor, ingrese los nombres.</div>
                </div>

                <div class="form-group mb-3">
                    <label for="apellidos_e" class="form-label">Apellidos</label>
                    <input type="text" class="form-control" id="apellidos_e" name="apellidos_e" placeholder="Apellidos" required />
                    <div class="invalid-feedback">Por favor, ingrese los apellidos.</div>
                </div>

                

                <div class="form-group mb-3">
                    <label for="correo_e" class="form-label">Correo</label>
                    <input type="email" class="form-control" id="correo_e" name="correo_e" placeholder="Correo" required />
                    <div class="invalid-feedback">Por favor, ingrese un correo electrónico válido.</div>
                </div>

                <div class="form-group mb-3">
                    <label for="correo_login" class="form-label">Correo Asignado por la Empresa</label>
                    <input type="email" class="form-control" id="correo_login" name="correo_login" placeholder="Correo Asignado por la Empresa" />
                </div>

                <div class="form-group mb-3">
                    <label for="contrasena_e" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contrasena_e" name="contrasena_e" placeholder="Contraseña" />
                </div>

                <div class="form-group mb-3">
                    <label for="nombre_empresa" class="form-label">Nombre de la Empresa</label>
                    <input type="text" class="form-control" id="nombre_empresa" name="nombre_empresa" placeholder="Nombre de la Empresa" />
                </div>

                <div class="form-group mb-3">
                    <label for="contacto_principal" class="form-label">Contacto Principal</label>
                    <input type="text" class="form-control" id="contacto_principal" name="contacto_principal" placeholder="Contacto Principal" />
                </div>

                <div class="form-group mb-3">
                    <label for="direccion" class="form-label">Dirección</label>
                    <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Dirección" />
                </div>

                <div class="form-group mb-3">
                    <label for="telefono" class="form-label">Número de Celular</label>
                    <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Número de Celular" />
                </div>

               

                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </form>
        </div>
    </div>
</div>

