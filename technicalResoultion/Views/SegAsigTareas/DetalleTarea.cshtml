@{
}

<form asp-action="ActualizarTarea" method="post">
    @foreach (var item in ViewBag.tarea)
    {
        <input type="hidden" name="id_tarea" value="@item.id_tarea" />
        <input type="hidden" name="id_interno" value="@item.id_interno" />

        <input type="text" class="form-control" name="tarea" value="@item.tarea" />
        <input type="text" class="form-control" name="id_ticket" value="@item.id_ticket" readonly />

        <select class="form-control" name="id_estado_progreso">
            @for (int i = 1; i < ViewBag.id_progreso.Count; i++)
            {
                var item2 = ViewBag.id_progreso[i];
                <option value="@item2.id_estado">@item2.nombre</option>
            }
        </select>

        <input type="text" class="form-control" name="nombres_i" value="@item.nombres_i @item.apellidos_i" readonly />
    }

    <input type="submit" class="btn btn-primary" value="Actualizar" />
</form>
