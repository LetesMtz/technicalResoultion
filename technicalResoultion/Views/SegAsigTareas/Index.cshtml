<div class="btnVolver d-flex position-fixed bottom-0 p-3 ">
    <a href="#" class="form-control bg-black text-light text-decoration-none ">Volver</a>
</div>

<div class="container mt-5 d-flex justify-content-center ">
    <div class="btnAsignarDiv">
        <a asp-action="AsignarTarea" class="">
            <div class="btnAsignarElementos">
                <img src="./img/portapapeles.png" alt="">
                <div>
                    <span>Asignar tareas</span>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="container mt-5 me-5 ">
    <div class="cabecera d-flex justify-content-between ">
        <div class="titulo">
            <h2 class="fw-bold">Tickets creados</h2>
            <h4 class="fw-bold">Tickets en progreso</h4>
        </div>
        <div class="botones d-flex ">
            <div>
                <span>Filtrar por:</span>
                <select name="" id="" class="form-control">
                    <option selected>Categoria</option>
                </select>
            </div>
        </div>
    </div>

    <div class="tabla mt-4">
        <table class="table table-striped ">
            <thead>
                <tr class="table-dark">
                    <th scope="col" style="width: 8vw; padding-left: 1.5vw;">N° TICKET</th>
                    <th scope="col" style="width: 40vw;">NOMBRE</th>
                    <th scope="col">PRIORIDAD</th>
                    <th scope="col">ESTADO</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <script>
                    for (i = 1; i < 6; i++) {
                        document.write('<tr>');
                        document.write('<th scope="row" style="padding-left: 1.5vw;">001234</th>');
                        document.write('<td>Nombre que se le colocó en el formulario</td>');
                        document.write('<td>Crítico</td>');
                        document.write('<td><span class="estadoTabla">En progreso</span></td>');
                        document.write('<td><a asp-action="TareasYComentarios" class="text-decoration-none ">Detalles</a></td>');
                        document.write('</tr>');
                    }
                </script>
            </tbody>
        </table>
    </div>
</div>

