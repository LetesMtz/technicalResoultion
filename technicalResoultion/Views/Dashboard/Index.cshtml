            </div>

            

        </div>

        <div class="linea-tickets">
            <hr style="border-color: black; border-style: solid; border-width: 1px;">
        </div>

        <div class="datosAbajo">
            <div class="graficoDePastel">
                <div class="tituloTicket">
                    <h5 style="font-family: Montserrat;"><b>TENDENCIA</b> DE LOS TICKETS</h5>
                </div>
                <div class="graficoPastel">
                    <canvas id="miGraficoPastel"></canvas>
                </div>
            </div>
            <div class="contenedorDatosVarios">
                <div class="tituloTicket">
                    <h5 style="font-family: Montserrat;"><b>DATOS</b> VARIOS</h5>
                </div>
                
                <div class="datosVarios">
                    <div class="fila">
                        <div class="columna">
                            <p class="numero">25</p>
                            <p class="texto"><strong>Tickets abiertos <br /></strong>durante este día</p>
                        </div>
                        <div class="columna">
                            <p class="numero">03</p>
                            <p class="texto"><strong>Empleados</strong><br />sin tickets asignados</p>
                        </div>
                    </div>
                    <div class="fila">
                        <div class="columna">
                            <p class="numero">05</p>
                            <p class="texto"><strong>Tickets resueltos</strong><br />durante este día</p>
                        </div>
                        <div class="columna">
                            <p class="numero">45</p>
                            <p class="texto"><strong>Empleados</strong><br />con tickets asignados</p>
                        </div>
                    </div>
                    <div class="fila">
                        <div class="columna2">
                            <p style="line-height: 1.2; font-weight: 800;">
                                <strong>Tiempo promedio de resolución:</strong><br>
                                <span style="font-size: 25px;">3 días</span>
                            </p>
                        </div>
                        <div class="columna2">
                            <button type="button" class="btn btn-dark w-70">Informe de Tickets</button>
                        </div>
                    </div>
                </div>




            </div>
            
        </div>
        



    </div>

</div>

<div style="margin-top: 25px;">
    <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Volver</a>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('miGraficoPastel').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Internet', 'Redes móviles', 'Cable'],
                datasets: [{
                    label: 'Porcentaje de Categorías',
                    data: [70, 14, 16], // Los porcentajes de cada categoría
                    backgroundColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 205, 86)'
                    ],
                    hoverOffset: 4 // Espacio entre la porción y el cursor al pasar el mouse
                }]
            },
            options: {
                responsive: true,
                cutout: '40%', // Tamaño del agujero en el centro (70% del radio)
                plugins: {
                    legend: {
                        display: true,
                        position: 'right'
                    }
                }
            }
        });
    });
</script>